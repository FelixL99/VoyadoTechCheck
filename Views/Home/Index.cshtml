@{
    ViewData["Title"] = "Home Page";
}

@model SearchModel

<div class="text-center">
    <h1 class="display-4">Voyado Tech Check</h1>
</div>

<div class="text-center">
    <form method="post" asp-controller="Home" asp-action="Index">
        <input type="text" id="userInput" name="UserInput" value="@Model.UserInput" placeholder="Enter search query">
        <input type="submit" value="Submit">
    </form>
</div>

<div class="text-center">

    <div class="">
        <h4 class="display-6">Google Results:</h4>
        <p>Google Results: @Model.TotalGoogleSearchHits</p>
    </div>

    <div class="">
        <h4 class="display-6">Algolia Results:</h4>
        <p>Algolia Results: @Model.TotalAlgoliaSearchHits</p>
    </div>
</div>