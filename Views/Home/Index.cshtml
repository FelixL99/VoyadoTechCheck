@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Voyado Tech Check</h1>
</div>

<div class="text-center">
    <form method="post" asp-controller="Home" asp-action="Index">
        <input type="text" id="userInput" name="UserInput" value="@Model.UserInput" placeholder="Enter search query">
        <input type="submit" value="Submit">
    </form>
</div>

<div class="text-center">
    <h4 class="display-6">Results:</h4>
    <p>@ViewBag.Result</p>
</div>